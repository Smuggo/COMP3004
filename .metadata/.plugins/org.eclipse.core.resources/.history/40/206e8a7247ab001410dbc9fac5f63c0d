package view.internals.game;

import java.awt.Canvas;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.RenderingHints;
import java.awt.image.BufferStrategy;

import javax.swing.JPanel;

public class GameBoardCanvas extends Canvas{

	private static final long serialVersionUID = -4828905301301544492L;
	
    Graphics lBufferGraphics;
    Image    lBufferImage;
	
	public GameBoardCanvas(){
		super();
		lBufferImage = this.createImage(1000, 1000);
	}
	
	public void paint(Graphics g){
		super.paint(g);
		
		Graphics2D g2D=(Graphics2D) g; // cast to 2D
	    g2D.setRenderingHint(RenderingHints.KEY_ANTIALIASING,
	                         RenderingHints.VALUE_ANTIALIAS_ON);
	    
		g2D.drawImage(lBufferImage, 0, 0, this);
	}
	
	
	public void drawToBuffer(){
		lBufferGraphics.drawRect(0, 0, 100, 100);
	}
	

}
