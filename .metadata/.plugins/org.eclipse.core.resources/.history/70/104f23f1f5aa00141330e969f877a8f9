package game.environment;

import java.awt.Point;

public class Hex{
	private int radius = 2;
	
	public Hex(){
		
	}
	
	public Point getCorner(Point center, int size, int cornerNum){
		double angle = (2 * Math.PI) / (6 * cornerNum);
		
		Point corner = (center.x + size * Math.cos(angle),
				  center.y + size * Math.sin(angle));
		
		return corner;
	}
}
