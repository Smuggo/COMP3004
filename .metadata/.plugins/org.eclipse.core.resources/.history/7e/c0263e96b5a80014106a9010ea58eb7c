package network;

import network.client.ClientApp;
import network.server.ServerApp;

public class NetworkManager {
	
	private ClientApp lClientApp;
	private ServerApp lServerApp;
	
	public NetworkManager(){
		
	}
	
	
	public void openServer(int aPortNumber){
		lServerApp = new ServerApp(aPortNumber);
		Thread t = new Thread(lServerApp);
    	t.start();
		lServerApp.run();
	}

}
