package server;
import java.net.Socket;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.PrintWriter;
import java.util.Scanner;

public class Server implements Runnable{

	private Socket cSocket;
	
	public Server(Socket s)
	{
		cSocket = s;
	}
	
	@Override
	public void run()
	{
		try
		{
			ObjectOutputStream cOutputStream = new ObjectOutputStream(cSocket.getOutputStream());
			ObjectInputStream cInputStream = new ObjectInputStream(cSocket.getInputStream());
			boolean running = true;
			while (running)
			{		
				
				String newRequest = (String)cInputStream.readObject();
			
				cOutputStream.writeObject(newRequest);
				
				cOutputStream.reset();
			}
			cOutputStream.close();
			cInputStream.close();
		} 
		catch (Exception e)
		{
			System.out.println("Error caught in MagicRealmServer Server.java");
		}	
		
	}

}

