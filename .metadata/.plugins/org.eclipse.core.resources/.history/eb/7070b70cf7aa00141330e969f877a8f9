package game.environment;

import java.awt.Point;

public class Hex{
	private int radius = 2;
	private int size = radius * 2;
	private Point centre = new Point();
	
	public Hex(){
		
	}
	
	public Point getCorner(Point center, int size, int cornerNum){
		double angle = (2 * Math.PI) / (6 * cornerNum);
		
		return new Point((int) (center.x + size * Math.cos(angle)),
				 		 (int)(center.y + size * Math.sin(angle)));
	}
	
	public int getRaddius() { return radius; }
	public int size()       { return size;   }
	public Point getCentre(){ return centre; }
	
}
