package view;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;
import java.awt.Toolkit;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class MagicRealmWindow extends JFrame{
	
	JPanel lLeftPanel;
	JPanel lRightPanel;
	
	public MagicRealmWindow(){
		super("Magic Realm v 0.0.1");

		setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		
		//Go Fullscreen
		Dimension lScreenSize = Toolkit.getDefaultToolkit().getScreenSize();
		getContentPane().setPreferredSize(new Dimension((int)lScreenSize.getWidth()-25,(int)lScreenSize.getHeight()-75));
		pack();
		setResizable(false);

		setLayout(new GridBagLayout());
		GridBagConstraints c = new GridBagConstraints();
		
		lLeftPanel = new JPanel();
		c.weightx = .75;
		c.weighty = 1;
		c.fill = GridBagConstraints.HORIZONTAL;
		c.gridx = 0;
		c.gridy = 0;
		c.insets = new Insets(5,5,5,5);
		getContentPane().add(lLeftPanel, c);
		
		lRightPanel = new JPanel();
		c.weightx = .25;
		c.weighty = 1;
		c.fill = GridBagConstraints.HORIZONTAL;
		c.gridx = 1;
		c.gridy = 0;
		c.insets = new Insets(5,5,5,5);
		getContentPane().add(lRightPanel, c);
		
		
		setVisible(true);
	}

}
