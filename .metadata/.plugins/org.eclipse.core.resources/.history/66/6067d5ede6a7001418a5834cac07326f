package view;

import java.awt.Dimension;
import java.awt.Toolkit;

import javax.swing.JFrame;

public class MagicRealmWindow extends JFrame{
	
	public MagicRealmWindow(){
		super("Magic Realm v 0.0.1");
		//Go Fullscreen
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		Dimension lScreenSize = Toolkit.getDefaultToolkit().getScreenSize();
		getContentPane().setPreferredSize(new Dimension((int)lScreenSize.getWidth()-25,(int)lScreenSize.getHeight()-100));
		pack();
		setResizable(false);
		
		setVisible(true);
	}

}
